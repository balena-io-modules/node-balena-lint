{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2021",
		"outDir": "build",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"baseUrl": ".",
	},
	"include": [
		"./lib/**/*.ts"
	]
}
