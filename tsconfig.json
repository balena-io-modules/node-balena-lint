{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2021",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"allowJs": true
	},
	"include": [
		"./lib/**/*",
		"./config/.eslintrc.js",
		"./test/**/*.ts"
	]
}
